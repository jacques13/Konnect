<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:float="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >



        <!-- change color of hint text-->
        <TextView
            android:text="Update Your Details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:gravity="center"
            android:textColor="#f0f0f0"
            android:textSize="20sp"/>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            float:fletPadding="10dp"
            android:id="@+id/facebook"
            float:fletTextAppearance="@style/floatlabelededittext">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Facebook"
                android:textColorHint="#f0f0f0"
                android:textColor="#f0f0f0"
                android:id="@+id/facebookText"
               />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            float:fletPadding="10dp"
            android:id="@+id/youtube"

            float:fletTextAppearance="@style/floatlabelededittext">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Youtube"
                android:textColorHint="#f0f0f0"
                android:textColor="#f0f0f0"
                android:id="@+id/youtubeText"
            />
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>


        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            float:fletPadding="10dp"
            android:id="@+id/instagram"
            float:fletTextAppearance="@style/floatlabelededittext">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Instagram"
                android:textColorHint="#f0f0f0"
                android:textColor="#f0f0f0"
                android:id="@+id/intagramText"/>
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            float:fletPadding="10dp"
            android:id="@+id/twitter"
            float:fletTextAppearance="@style/floatlabelededittext">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Twitter"
                android:textColorHint="#f0f0f0"
                android:textColor="#f0f0f0"
                android:id="@+id/twitterText"/>
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            float:fletPadding="10dp"
            android:id="@+id/reddit"
            float:fletTextAppearance="@style/floatlabelededittext">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Reddit"
                android:textColorHint="#f0f0f0"
                android:textColor="#f0f0f0"
                android:id="@+id/redditText"/>
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            float:fletPadding="10dp"
            android:id="@+id/tumblr"
            float:fletTextAppearance="@style/floatlabelededittext">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tumblr"
                android:textColorHint="#f0f0f0"
                android:textColor="#f0f0f0"
                android:id="@+id/tumblrText"/>
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            float:fletPadding="10dp"
            android:id="@+id/linkedin"
            float:fletTextAppearance="@style/floatlabelededittext">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Linkedin"
                android:textColorHint="#f0f0f0"
                android:textColor="#f0f0f0"
                android:id="@+id/linkedinText"/>
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            float:fletPadding="10dp"
            android:id="@+id/flickr"
            float:fletTextAppearance="@style/floatlabelededittext">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Flickr"
                android:textColorHint="#f0f0f0"
                android:textColor="#f0f0f0"
                android:id="@+id/flickrText"/>
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            float:fletPadding="10dp"
            android:id="@+id/pinterest"
            float:fletTextAppearance="@style/floatlabelededittext">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pinterest"
                android:textColorHint="#f0f0f0"
                android:textColor="#f0f0f0"
                android:id="@+id/pinterestText"/>
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            float:fletPadding="10dp"
            android:id="@+id/askfm"
            float:fletTextAppearance="@style/floatlabelededittext">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ask.fm"
                android:textColorHint="#f0f0f0"
                android:textColor="#f0f0f0"
                android:id="@+id/askfmText"/>
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            float:fletPadding="10dp"
            android:id="@+id/google"
            float:fletTextAppearance="@style/floatlabelededittext">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Google+"
                android:textColorHint="#f0f0f0"
                android:textColor="#f0f0f0"
                android:id="@+id/googleText"/>
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            float:fletPadding="10dp"
            android:id="@+id/snapchat"
            float:fletTextAppearance="@style/floatlabelededittext">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Snapchat"
                android:textColorHint="#f0f0f0"
                android:textColor="#f0f0f0"
                android:id="@+id/snapchatText"/>
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            float:fletPadding="10dp"
            android:id="@+id/whatsapp"
            float:fletTextAppearance="@style/floatlabelededittext">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Whatsapp"
                android:textColorHint="#f0f0f0"
                android:textColor="#f0f0f0"
                android:inputType="number"
                android:id="@+id/whatsappText"/>
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            float:fletPadding="10dp"
            android:id="@+id/wechat"
            float:fletTextAppearance="@style/floatlabelededittext">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Wechat"
                android:textColorHint="#f0f0f0"
                android:textColor="#f0f0f0"
                android:id="@+id/wechatText"/>
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:padding="15dp"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="2dp"
            fancy:fb_defaultColor="#55acee"
            fancy:fb_focusColor="#8cc9f8"
            fancy:fb_text="Submit"
            fancy:fb_textColor="#FFFFFF"/>


    </LinearLayout>
</ScrollView>